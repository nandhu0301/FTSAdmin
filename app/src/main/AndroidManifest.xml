<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.smiligence.petclinic">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:exported="false"
        android:fullBackupContent="false"
        android:grantUriPermissions="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.smiligence.petclinic.WebPageActivity"></activity>
        <activity
            android:name="com.smiligence.petclinic.BillingActivity"
            android:label="Retail Billing" />
        <activity android:name="com.smiligence.petclinic.Add_Description_Activity" />
        <activity android:name="com.smiligence.petclinic.OffersActivity" />
        <activity android:name="com.smiligence.petclinic.ForgetPasswordActivity" />
        <activity android:name="com.smiligence.petclinic.ViewAdvertisementActivity" />
        <activity android:name="com.smiligence.petclinic.ItemRatingReviewApprovalActivity" />
        <activity android:name="com.smiligence.petclinic.LegalDetailsUploadActivity" />
        <activity android:name="com.smiligence.petclinic.CustomerDetailsActivity" />
        <activity android:name="com.smiligence.petclinic.DeliverySettings" />
        <activity android:name="com.smiligence.petclinic.AddItemActivity" />
        <activity android:name="com.smiligence.petclinic.AddAdvertisementActivity" />
        <activity android:name="com.smiligence.petclinic.MyProfileActivity" />
        <activity android:name="com.smiligence.petclinic.CategoryActivity" />
        <activity android:name="com.smiligence.petclinic.UpdateOrderStatusActivity" />
        <activity android:name="com.smiligence.petclinic.ViewOrderActivity" />
        <activity android:name="com.smiligence.petclinic.ReportGenerationActivity" />
        <activity android:name="com.smiligence.petclinic.DiscountActivity" />
        <activity android:name="com.smiligence.petclinic.ViewItemDetailsCategoryActivity" />
        <activity android:name="com.smiligence.petclinic.LoginActivity" />
        <activity android:name="com.smiligence.petclinic.DashBoardActivity" />
        <activity android:name="com.smiligence.petclinic.RegisterActivity" />
        <activity android:name="com.smiligence.petclinic.common.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.smiligence.petclinic.common.FirebaseMessagingService"
            android:permission="TODO"
            tools:ignore="ExportedService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>



    </application>

</manifest>